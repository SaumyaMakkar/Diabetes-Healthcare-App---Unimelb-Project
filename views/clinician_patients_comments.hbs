{{> clinician_sidebar}}
{{> header}}
<div class="panel-content">
    <div class="wt-grid-container">

        {{!-- Heading--}}
        <div class="wt-grid-item size-12@t">
            <h1>Comments</h1>
        </div>

        <div class="wt-grid-item size-12@t">
            <div class="wt-card-content">
                <div class="wt-grid-container">
                    <div class="wt-grid-item size-2@t" style="padding-left: 5%;">
                        <strong>Date</strong>
                    </div>
                    <div class="wt-grid-item size-3@t" style="padding-left: 5%;">
                        <strong>Full name</strong>
                    </div>
                    <div class="wt-grid-item size-3@t" style="padding-left: 5%; padding-right:2.5%;">
                        <strong>Health Data Label</strong>
                    </div>
                    <div class="wt-grid-item size-4@t" style="text-align: center;">
                        <strong>Comments</strong>
                    </div>
                </div>
            </div>
            {{!-- --}}

            {{#each patients}}
            {{#if (or (checkLength record_patient.0.glucoseLevel.comment) (checkLength
            record_patient.0.weight.comment) (checkLength record_patient.0.insulinDoses.comment) (checkLength
            record_patient.0.exercise.comment))}}
            {{!-- {{#if true}} --}}
            <div class="wt-card">
                <div class="wt-card-content">
                    <div class="wt-grid-container">
                        {{!-- <div class="wt-grid-item size-1@t">
                            <img class="wt-border-rounded" src="/assets/img/patient_img.png" width="40px">
                        </div> --}}
                        <div class="wt-grid-item size-2@t" style="padding-left: 5%;">
                            {{record_patient.0.date}}
                        </div>
                        <div class="wt-grid-item size-3@t">
                            <div class="wt-grid-container">
                                <div class="wt-grid-item size-3@t" style="padding: 0%;">
                                    <img class="wt-border-rounded" src="/assets/img/patient_img.png" width="30px">

                                </div>
                                <div class="wt-grid-item size-9@t" style="padding: 0% ;">
                                    {{!-- Jean Vera --}}
                                    {{!-- {{!-- {{firstName}} {{lastName}} --}}
                                    <a href="./clinician_dashboard/{{_id}}/clinician_patient_data">
                                        {{givenName}} {{familyName}}
                                    </a>
                                </div>
                            </div>
                        </div>

                        {{#if (checkLength record_patient.0.glucoseLevel.comment)}}

                        <div class="wt-grid-item size-3@t"
                            style="text-align:center; padding-right: 5%; margin-left:40%; margin-top:-2%;">
                            Glucose level
                        </div>
                        <div class="wt-grid-item size-4@t" style="padding: 0%; margin-top:-2%;">
                            <div class="wt-grid-item size-12@t" style="align-items: center;margin-top:-5%;">
                                <div class="wt-card" id="vertical_scroll_card">
                                    <a href="./clinician_dashboard/{{_id}}/clinician_patient_data">
                                        <input type="text" readonly name="glucose" id="glu"
                                            value="{{record_patient.0.glucoseLevel.comment}}" style="margin: 0;">
                                    </a>
                                </div>
                            </div>
                        </div>
                        {{/if}}

                        {{#if (checkLength record_patient.0.weight.comment)}}

                        <div class="wt-grid-item size-3@t"
                            style="text-align:center; padding-right: 5%; margin-left:40%; margin-top:-1%;">
                            Weight
                        </div>
                        <div class="wt-grid-item size-4@t" style="padding: 0%;margin-top:-2%;">
                            <div class="wt-grid-item size-12@t" style="align-items: center;">
                                <div class="wt-card" id="vertical_scroll_card">
                                    <a href="./clinician_dashboard/{{_id}}/clinician_patient_data">
                                        <input type="text" readonly name="glucose" id="glu"
                                            value="{{record_patient.0.weight.comment}}" style="margin: 0;">
                                    </a>
                                </div>
                            </div>
                        </div>
                        {{/if}}
                        {{#if (checkLength record_patient.0.insulinDoses.comment 0) }}


                        <div class="wt-grid-item size-3@t"
                            style="text-align:center; padding-right: 5%; margin-left:40%; margin-top:-1%;">
                            Insulin Doses
                        </div>
                        <div class="wt-grid-item size-4@t" style="padding: 0%; margin-top:-2%;">
                            <div class="wt-grid-item size-12@t" style="align-items: center;">

                                <div class="wt-card" id="vertical_scroll_card">
                                    <a href="./clinician_dashboard/{{_id}}/clinician_patient_data">
                                        <input type="text" readonly name="glucose" id="glu"
                                            value="{{record_patient.0.insulinDoses.comment}}" style="margin: 0;">
                                    </a>
                                </div>
                            </div>
                        </div>
                        {{/if}}
                        {{#if (checkLength record_patient.0.exercise.comment)}}



                        <div class="wt-grid-item size-3@t"
                            style="text-align:center; padding-right: 5%; margin-left:40%;margin-top:-1%;">
                            Exercise
                        </div>
                        <div class="wt-grid-item size-4@t" style="padding: 0%;margin-top:-2%;">
                            <div class="wt-grid-item size-12@t" style="align-items: center;">

                                <div class="wt-card" id="vertical_scroll_card">
                                    <a href="./clinician_dashboard/{{_id}}/clinician_patient_data">
                                        <input type="text" readonly name="glucose" id="glu"
                                            value="{{record_patient.0.exercise.comment}}" style="margin: 0;">
                                    </a>
                                </div>
                            </div>
                        </div>

                        {{/if}}
                    </div>
                </div>
            </div>
            <br />
            {{/if}}

            {{/each}}
        </div>


    </div>
</div>