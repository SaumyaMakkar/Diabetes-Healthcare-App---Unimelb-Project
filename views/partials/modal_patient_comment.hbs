<div id="patientCommentModal_{{dateFormat recordDate}}_{{type}}" class="wt-modal">
        <div class="wt-modal-content wt-align-left">
            <span class="wt-modal-close">&times;</span>
            <div class="wt-grid-container">
                <div class="wt-grid-item size-6@p size-12@t">
                    <h2>Patient Comment </h2>
                </div>
                <div class="wt-grid-item size-6@p size-12@t">
                    <h4>Date: {{dateFormat recordDate}}</h4>
                </div>
                <div class="wt-grid-item size-6@p size-12@t">
                    <h4>Type: {{type}}</h4>
                </div>
                <div class="wt-grid-item size-12@t" style="padding: 5px;">
                    <textarea readonly rows="5">{{comment}}</textarea>
                </div>
            </div>
        </div>
    </div>