        {{!-- Update Details Modal --}}
        <div id="UpdateDetailsModal" class="wt-modal">
            <div class="wt-modal-content">
                <span class="wt-modal-close">&times;</span>
                <form action="/clinician_profile/EditClinicianProfile" method="POST">
                    <div class="wt-grid-container">
                        <div class="wt-grid-item size-12@t">
                            <h2>Edit your Profile</h2>
                        </div>
                        <div class="wt-grid-item size-6@t">
                            <label>Email</label>
                            <input name="email" type="email" />
                        </div>
                        <div class="wt-grid-item size-6@t">
                            <label>Address</label>
                            <input name="address" type="tel" />
                        </div>
                        <div class="wt-grid-item size-6@t">
                            <label>Contact Number</label>
                            <input name="contactNumber" type="text" />
                        </div>
                        <div class="wt-grid-item size-3@t">
                            <label>City/Suburb</label>
                            <input name="city/suburb" type="text" />
                        </div>
                        <div class="wt-grid-item size-3@t">
                            <label>State</label>
                            <input name="state" type="text" />
                        </div>
                        <div class="wt-grid-item size-3@t">
                            <label>Password</label>
                            <input name="password" type="password" />
                        </div>
                        <div class="wt-grid-item size-3@t">
                            <label>Year of Birth</label>
                            <input name="yearOfBirth" type="text" pattern="\d*" placeholder="YYYY" maxlength="4" />
                        </div>
                        <div class="wt-grid-item size-3@t">
                            <label>Country</label>
                            <input name="country" type="text" />
                        </div>
